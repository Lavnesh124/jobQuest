#include<bits/stdc++.h>
using namespace std;


int main(){
    int n,m;
    cin>>n>>m;
    vector<vector<int>> grid(n,vector<int>(m,-1));
        vector<vector<int>> vis(n,vector<int>(m,-1));
    for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            cin>>grid[i][j];
        }
    }
    queue<pair<pair<int,int>,int>> q;
    for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            if(grid[i][j]==2){
                q.push({{i,j},0});
                vis[i][j]=1;
            }
        }
    }
    int x[]={-1,1,0,0};
    int y[]={0,0,1,-1};
    int mx=0;
    while(!q.empty()){
        auto temp=q.front();
        int st=temp.second;
        int r=temp.first.first;
        int c=temp.first.second;
        q.pop();
        mx=max(mx,st);
       
        
        for(int i=0;i<4;i++){
            int ir=x[i]+r;
            int ic=y[i]+c;
            if(ir>=0 && ic>=0 && ir<n && ic<m && grid[ir][ic]==1 && vis[ir][ic]==-1){
                grid[ir][ic]=2;
                 vis[ir][ic]=1;
                q.push({{ir,ic},st+1});
            }
        }
    }
     for(int i=0;i<n;i++){
        for(int j=0;j<m;j++){
            if(grid[i][j]==1){
                cout<<-1<<endl;
                return 0;
            }
        }
    }
    cout<<mx<<endl;
    return 0;
    
}
